<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="15" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.lk.ijse.chatapplication.Client2Controller">
    <padding><Insets top="20" left="20" right="20" bottom="20"/></padding>

    <Label text="Group Chat - Client 2" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <HBox spacing="10">
        <TextField fx:id="nameField" promptText="Your Name" prefWidth="150"/>
        <Button fx:id="connectBtn" text="Connect" onAction="#connect"/>
        <Button fx:id="logoutBtn" text="Logout" onAction="#logout"/>
    </HBox>

    <TextArea fx:id="chatArea" editable="false" prefHeight="320" prefWidth="560"/>

    <HBox spacing="10">
        <TextField fx:id="messageField" promptText="Type message..." prefWidth="460" onAction="#send"/>
        <Button text="Send" onAction="#send"/>
    </HBox>
</VBox>